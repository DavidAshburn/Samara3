
<div class="card w-50">
  <h5 class="card-header"><%= @client.first_name + " " + @client.last_name %></h5>
  <div class="card-body">
    <h5 class="card-title"><%= @client.phone %></h5>
    <div class="mt-3">
      <p class="card-text"><%= @client.email %></p>
      <p class="card-text"><%= @client.mail_address %></p>
    </div>
    
    <div class="row mt-3">
      <div class="col-9">
        <%= link_to "Edit this client", edit_client_path(@client), class:"btn btn-outline-primary" %>
        <%= link_to "Client list", clients_path, class:"btn btn-outline-dark" %>
      </div>
      <div class="col align-self-end">
        <%= button_to "Delete this client", @client, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>